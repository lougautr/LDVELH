						pannelListHist.setVisible(false);
						pannelPrincipal.remove(pannelListHist);
					}
				});
			}
		});

		f.getContentPane().add(pannelPrincipal);
		f.setDefaultCloseOperation(WindowConstants.DISPOSE_ON_CLOSE);
		f.setVisible(true);
	}

